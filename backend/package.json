{
  "name": "@putongoj/backend",
  "version": "3.0.0",
  "private": true,
  "main": "app.ts",
  "engines": {
    "node": ">= 22.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:app\" \"npm run dev:ws\" \"npm run dev:updater\" \"npm run dev:worker\"",
    "dev:app": "cross-env NODE_ENV=development nodemon -e ts,js --exec ts-node src/app.ts",
    "dev:ws": "cross-env NODE_ENV=development nodemon -e ts,js --exec ts-node src/ws.ts",
    "dev:updater": "cross-env NODE_ENV=development nodemon -e ts,js --exec ts-node src/jobs/updater.ts",
    "dev:worker": "cross-env NODE_ENV=development nodemon -e ts,js --exec ts-node src/jobs/worker.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "deploy:init": "cross-env NODE_ENV=production node setup.js",
    "deploy:start": "npx pm2 start pm2.config.json",
    "pretest": "cross-env NODE_ENV=test ts-node test/pretest.ts",
    "test": "cross-env-shell NODE_ENV=test \"ts-node test/pretest.ts && nyc ava && ts-node test/posttest.ts\"",
    "report": "nyc report --reporter=html",
    "posttest": "cross-env NODE_ENV=test ts-node test/posttest.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov"
  },
  "dependencies": {
    "@koa/router": "^14.0.0",
    "@noble/ciphers": "^2.0.1",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@putongoj/shared": "workspace:*",
    "cross-env": "^10.1.0",
    "dotenv-flow": "^4.1.0",
    "fast-levenshtein": "^3.0.0",
    "fs-extra": "^11.3.2",
    "ioredis": "^5.8.2",
    "koa": "^2.16.3",
    "koa-body": "^6.0.1",
    "koa-logger": "^4.0.0",
    "koa-ratelimit": "^6.0.0",
    "koa-send": "^5.0.1",
    "koa-session": "^7.0.2",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.19.2",
    "mongoose-paginate-v2": "^1.9.1",
    "pm2": "^6.0.13",
    "superagent": "^10.2.3",
    "tracer": "^1.3.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@ava/typescript": "^6.0.0",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^2.15.0",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-ratelimit": "^5.0.5",
    "@types/koa-send": "^4.1.6",
    "@types/koa-static": "^4.0.4",
    "@types/koa__router": "^12.0.5",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.2",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "ava": "^6.4.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.0",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "nodemonConfig": {
    "ignore": [
      "data/*",
      "dist/*",
      "test/*"
    ]
  },
  "ava": {
    "concurrency": 1,
    "serial": true,
    "environmentVariables": {
      "NODE_ENV": "test"
    },
    "files": [
      "test/**/*.test.{js,ts}"
    ],
    "extensions": [
      "ts",
      "js"
    ],
    "require": [
      "ts-node/register",
      "./test/_force-exit.mjs"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.{js,ts}"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
